<link rel="stylesheet" href="/css/budget.css">

    <h3 class="center-budget container flex justify-center">
    <label for="name">Budget Name</label>
    <input class="budget-input" id="name" type="text">
    </h3>

<section id="budget-section" class="bg-gray-50">
    <table class="bg-gray-50 center-budget-table">
        <tr>
            <th class="px-4 py-1 text-md text-black-500 row-name">Percent of Income</th>
            <th class="px-4 py-1 text-md text-black-500 row-name">Dollar Amount</th>
        </tr>
        <tr>
            <td class="px-4 py-1 text-md text-black-500 row-name"><label for="housing">Housing</label>
                <input class="budget-input" id="housing" type="text">&#37;
            </td>
            <td id="housing-amount" class="px-4 py-1 text-md text-black-500 row-name"></td>
        </tr>
        <tr>
            <td class="px-4 py-1 text-md text-black-500 row-name"><label for="insurance">Insurance</label>
                <input class="budget-input" id="insurance" type="text">&#37;
            </td>
            <td class="px-4 py-1 text-md text-black-500 row-name" id="insurance-amount"></td>
            </td>
        </tr>
        <tr>
            <td class="px-4 py-1 text-md text-black-500 row-name">
                <label for="transportation">Transportation</label>
                <input class="budget-input" id="transportation" type="text">&#37;
            </td>
            <td id="transportation-amount" class="px-4 py-1 text-md text-black-500 row-name"></td>
            </td>
        </tr>
        <tr>
            <td class="px-4 py-1 text-md text-black-500 row-name">
                <label for="food">Food</label>
                <input class="budget-input" id="food" type="text">&#37;
            </td>
            <td id="food-amount" class="px-4 py-1 text-md text-black-500 row-name"></td>
            </td>
        </tr>
        <tr>
            <td class="px-4 py-1 text-md text-black-500 row-name">
                <label for="savings">Savings</label>
                <input class="budget-input" id="savings" type="text">&#37;
            <td id="savings-amount" class="px-4 py-1 text-md text-black-500 row-name"></td>
            </td>
            </td>
        </tr>
        <tr>
            <td class="px-4 py-1 text-md text-black-500 row-name">
                <label for="utilities">Utilities</label>
                <input class="budget-input" id="utilities" type="text">&#37;
            </td>
            <td id="utilities-amount" class="px-4 py-1 text-md text-black-500 row-name"></td>
            </td>
        </tr>
        <tr>
            <td class="px-4 py-1 text-md text-black-500 row-name">
                <label for="personal">Personal</label>
                <input class="budget-input" id="personal" type="text">&#37;
            </td>
            <td id="personal-amount" class="px-4 py-1 text-md text-black-500 row-name"></td>
            </td>
        </tr>
    </table>
    <div id="budBtn" class="center-budget">
        <button id="budget-refresh-btn" class="button-budget">Refresh Saved Budget</button>
        <button id="budget-save-btn" class="button-budget">Update Budget</button>
    </div>
</section>


<script src="/js/budget-helper.js"></script>
